<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Search</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f9;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 50px auto;
      padding: 20px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .search-form {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }

    .search-form input {
      width: 70%;
      padding: 10px;
      font-size: 16px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }

    .search-form button {
      padding: 10px 20px;
      font-size: 16px;
      color: #fff;
      background-color: #28a745;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-left: 10px;
    }

    .search-form button:hover {
      background-color: #218838;
    }

    .results h2 {
      color: #555;
      border-bottom: 1px solid #ddd;
      padding-bottom: 10px;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-top: 20px;
    }

    .card {
      border: 1px solid #ddd;
      border-radius: 10px;
      background-color: #fff;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      text-align: center;
      padding: 10px;
    }

    .card:hover {
      transform: scale(1.05);
      box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }

    .card img {
      width: 100px;
      height: 100px;
      object-fit: cover;
      border-radius: 5px;
      margin: 10px auto;
    }

    .card-content {
      padding: 10px;
    }

    .card-content h3 {
      margin: 0 0 10px;
      color: #333;
      font-size: 16px;
    }

    .card-content p {
      margin: 5px 0;
      color: #666;
      font-size: 14px;
    }

    .no-results {
      text-align: center;
      color: #666;
      font-size: 16px;
      margin-top: 50px;
    }
  </style>
</head>
<body>
  <%- include('navBar') %>
  <div class="container">
    <div class="results">
      <% if (result && (result.crops.length > 0 || result.farmers.length > 0)) { %>
        <% if (result.crops.length > 0) { %>
          <h2>Crops</h2>
          <div class="grid">
            <% result.crops.forEach(crop => { %>
              <div class="card">
                <img src="<%= crop.imageUrl %>" alt="<%= crop.cropName %>">
                <div class="card-content">
                  <h3><%= crop.cropName %></h3>
                  <p><strong>Quantity:</strong> <%= crop.quantity %> bags</p>
                  <p><strong>Price per bag:</strong> â‚¦<%= crop.amountPerBag %></p>
                  <p><strong>Farm:</strong> <%= crop.farmId.farmName %> (<%= crop.farmId.state %>, <%= crop.farmId.LGA %>)</p>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      <% } else { %>
        <p class="no-results">No results found for your search query.</p>
      <% } %>
    </div>
  </div>
</body>
</html>
